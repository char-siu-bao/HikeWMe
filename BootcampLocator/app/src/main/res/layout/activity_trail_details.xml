<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.judejoseph.bootcamplocator.activities.TrailDetailsActivity">

    <TextView
        android:id="@+id/trail_cell_address"
        android:layout_width="284dp"
        android:layout_height="36dp"
        android:text="Address"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/trail_cell_title" />

    <TextView
        android:id="@+id/trail_cell_title"
        android:layout_width="284dp"
        android:layout_height="36dp"
        android:text="TrailTitle"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79dp" />

    <TextView
        android:id="@+id/trail_cell_details"
        android:layout_width="284dp"
        android:layout_height="82dp"
        android:text="Details"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/trail_cell_title" />

    <Button
        android:id="@+id/viewTrailInMapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/trail_cell_details"
        app:layout_constraintVertical_bias="0.502"
        android:onClick="showTrailOnMapBtnClick"/>
</android.support.constraint.ConstraintLayout>
